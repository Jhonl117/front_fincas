   <!-- Modal Modificar -->
    <div class="modal fade" id="UpdateModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabelLogout"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card fondo-form">
                                <div class="card-header fondo-form">
                                    <h4 class="card-title">Modificar Datos del Servicio</h4>
                                    <hr>
                                </div>
                                <div class="card-body">
                                    <div class="basic-form">
                                        <form id="formModificar">

                                            <div class="form-row">
                                                <input type="text" hidden id="txtID">
                                                <div class="form-group col-md-6 mb-4">
                                                    <label>Nombre</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                                        </div>
                                                        <input type="text" id="txtNombre" class="form-control" placeholder="Ingrese Nombre del servicio">
                                                        <div class="invalid-feedback" id="txtNombreError"></div>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-6 mb-4">
                                                    <label>Duracion</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                                        </div>
                                                        <input type="text" id="txtDuracion" class="form-control" placeholder="Ingreso duracion del servicio">
                                                        <div class="invalid-feedback" id="txtDuracionError"></div>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-6 mb-4">
                                                    <label>Precio</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fas fa-envelope-open"></i></span>
                                                        </div>
                                                        <input type="email" id="txtPrecio" class="form-control" placeholder="Escriba el precio del servicio ">
                                                        <div class="invalid-feedback" id="txtPrecioError"></div>
                                                    </div>
                                                </div> 
                                                <div class="form-group col-md-6 mb-4">
                                                    <label>Categoria</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                                                        </div>
                                                        <select id="selCategoria" class="form-control">
                                                            <option value="disabled" selected>Seleccionar Categoria</option>
                                                            <option value="manicure">Manicure</option>
                                                            <option value="barberia">Barberia</option>
                                                            <option value="peluqueria">Peluqueria</option>
                                                        </select>
                                                        <div class="invalid-feedback" id="selCategoriaError"></div>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-12 mb-4">
                                                    <label for="txtDescripcion" >Descipcion Categoría</label>
                                                    <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text"></span>
                                                    </div>
                                                        <textarea id="txtDescripcion" class="form-control min-height-5" placeholder="Descripcion de la Categoria..."></textarea>
                                                        <div class="invalid-feedback" id="txtDescripcionError"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <div class="mt-2">
                        <button type="submit" class="btn-sm btn-success mx-2" id="btnMdGuardar">
                            <i class="fas fa-check-square mr-2"></i>Guardar
                        </button>
                        <button type="submit" class="btn-sm btn-danger mx-2" data-dismiss="modal">
                            <i class="fas fa-times-circle mr-2" ></i>Cancelar
                        </button>
                        <button type="" class="btn-sm btn-warning mx-2" id="btnMdReset">
                            <i class="fas fa-exchange-alt mr-2"></i>Restablecer
                        </button>
                    </div>
                </div>
            </div>
